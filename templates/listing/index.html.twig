{% extends 'base.html.twig' %}

{% block title %}Listing Index{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #343a40;
            text-align: center;
            margin-top: 30px;
        }

        .table-container {
            width: 90%;
            margin: 40px auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        table th, table td {
            text-align: center;
            padding: 15px;
        }

        table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        .actions a {
            margin-right: 10px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

        .actions a:hover {
            text-decoration: underline;
        }

        .create-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            margin-top: 20px;
        }

        .create-btn:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}

    <h1>Listing Index</h1>

    <div class="table-container">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Address</th>
                <th>Rent Price</th>
                <th>Available From</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for listing in listings %}
                <tr>
                    <td>{{ listing.id }}</td>
                    <td>{{ listing.title }}</td>
                    <td>{{ listing.description }}</td>
                    <td>{{ listing.address }}</td>
                    <td>${{ listing.rentPrice }}</td>
                    <td>{{ listing.availabefrom ? listing.availabefrom|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="actions">
                        <a href="{{ path('app_listing_show', {'id': listing.id}) }}" class="btn btn-sm btn-outline-info">Show</a>
                        <a href="{{ path('app_listing_edit', {'id': listing.id}) }}" class="btn btn-sm btn-outline-warning">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_listing_new') }}" class="create-btn">Create New Listing</a>
    </div>
{% endblock %}

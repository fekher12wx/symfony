{% extends 'base.html.twig' %}

{% block title %}Listing index{% endblock %}

{% block body %}
    <h1>Listing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Address</th>
                <th>RentPrice</th>
                <th>Availabefrom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listing in listings %}
            <tr>
                <td>{{ listing.id }}</td>
                <td>{{ listing.title }}</td>
                <td>{{ listing.description }}</td>
                <td>{{ listing.address }}</td>
                <td>{{ listing.rentPrice }}</td>
                <td>{{ listing.availabefrom ? listing.availabefrom|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_listing_show', {'id': listing.id}) }}">show</a>
                    <a href="{{ path('app_listing_edit', {'id': listing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_listing_new') }}">Create new</a>
{% endblock %}

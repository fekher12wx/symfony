{% extends 'base.html.twig' %}

{% block title %}Appartment{% endblock %}

{% block body %}
    <h1>Appartment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appartment.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ appartment.type }}</td>
            </tr>
            <tr>
                <th>NumberOfRooms</th>
                <td>{{ appartment.numberOfRooms }}</td>
            </tr>
            <tr>
                <th>SquareMeters</th>
